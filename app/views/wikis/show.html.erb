
<h1><% @wiki.title %></h1>

 <div class="row">
   <div class="col-md-8">
     <p><%= markdown(@wiki.body) %></p>
   </div>
   <div class="col-md-4">
     <%= link_to "Edit", edit_wiki_path(@wiki), class: 'btn btn-success' %>
     <% if @wiki.user_id === current_user.id || current_user.admin? %>
       <%= link_to "Delete Wiki", @wiki, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this wiki?'} %>
       <%= link_to "Add/Remove collaborators", wiki_collaborators_path(@wiki), method: :get, class: 'btn btn-success' %>
     <%end%>
   </div>
 </div>

 <div class="row">
   <div class="col-md-8">
      <h3>collaborators:</h3>
       <% if @wiki.users.count > 0 %>
           <% @wiki.users.each do |f| %>
           <p><%= f.email %></p>
           <% end %>
       <% else %>
        <p> No Collaborators </p>

        <%end%>
      </div>
    </div>
